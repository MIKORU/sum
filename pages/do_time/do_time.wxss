.header{
  display: flex;
  height: 100px;
  border-bottom: 1px solid #ddd;
  flex-direction: column;
  font-size: 14px;
  color: #101010;
  margin-left: 20px;
  margin-top: 20px;
  margin-right: 20px;
}
.num{
  height: 40px;
}
.time{
  height: 40px;
}
.topic{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80px;
  font-size: 28px;
  color: #bab5ba;
  margin-left: 20px;
  margin-right: 20px;
  border-bottom: 1px solid #bab5ba;
}
.choice{
  height: 260px;
  font-size: 20px;
   margin-top: 30px;
}
.item{
  display: flex;
   justify-content: flex-start;
  align-items: center;
  font-size: 20px;
  color: #bab5ba;
  height: 70px;
}
.choose{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  width: 50px;
  height: 50px;
  margin-left: 20px;
   border: 1px solid #bab5ba;
   border-radius: 100px;
}
.answer{
  margin-left:40px;
}